<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">


    <!-- Page header -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tint="#fbd700"
            android:backgroundTint="@color/section_grey"/>

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_logo" />


        <ImageButton
            android:id="@+id/editUserBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tint="@color/special_yellow"
            android:backgroundTint="@color/section_grey"/>

    </LinearLayout>


    <!-- Description of what this page does -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"

        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiment Statistics"
            android:fontFamily="monospace"
            android:textColor="@color/special_yellow"

            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <!--  Current experiment goes here   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/section_grey"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/experiment_description"

                android:text="Description"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2.5dp"

                android:layout_marginBottom="2.5dp"
                android:layout_weight="5"
                android:background="@color/special_yellow"
                android:padding="5dp"

                android:textColor="@color/black"
                android:fontFamily="monospace" >

            </TextView>



            <ImageView
                android:id="@+id/experiment_location"

                android:layout_width="20dp"
                android:layout_height="20dp"


                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_location_off_24" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/experiment_text_type"
                android:text="Type"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"


                android:layout_weight="2.4"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">

            </TextView>


            <TextView

                android:id="@+id/experiment_text_owner"
                android:text="Owner"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"

                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="3dp"

                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>



            <TextView
                android:id="@+id/experiment_text_status"
                android:text="Status"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="2.5dp"

                android:layout_weight="2"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>




        </LinearLayout>

    </LinearLayout>


    <!--  List of blocked users  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="4"
        android:gravity="center">

        <TextView
            android:id="@+id/txtStatsSummaryStatPage"

            android:text="Stats Summary"
            android:textSize="12sp"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="5"
            android:background="@color/button_dark_grey"
            android:padding="3dp"

            android:textColor="@color/white"
            android:fontFamily="monospace">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/plotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textColor="@color/special_yellow"

            android:text="GRAPH INFO HERE"

            android:padding="5dp"
            android:background="@color/section_grey"
            android:gravity="center_horizontal" />

    </LinearLayout>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp" >

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/histogramView"
            android:layout_width="350dp"
            android:layout_height="255dp">
        </com.github.mikephil.charting.charts.BarChart>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/timePlotView"
            android:layout_width="350dp"
            android:layout_height="255dp">
        </com.github.mikephil.charting.charts.LineChart>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_weight="0.8">

        <ImageButton
            android:id="@+id/btnPreviousGraph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_chevron_left_24"


            android:backgroundTint="@color/special_yellow"/>

        <ImageButton
            android:id="@+id/btnNextGraph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"

            android:backgroundTint="@color/special_yellow"

            android:src="@drawable/ic_baseline_chevron_right_24"/>

        <ImageButton
            android:id="@+id/btnPlotSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"

            android:backgroundTint="@color/special_yellow"

            android:src="@drawable/ic_baseline_settings_24_black"/>
    </LinearLayout>


</LinearLayout>




