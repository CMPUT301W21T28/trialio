<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#747474">


    <TextView
        android:id="@+id/txtStatsSummaryStatPage"
        android:layout_width="292dp"
        android:layout_height="153dp"
        android:background="#A19B9B"
        android:textColor="#B6B0B0"
        tools:ignore="MissingConstraints" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/statPlot"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStatsSummaryStatPage"
        tools:ignore="MissingConstraints"></com.github.mikephil.charting.charts.BarChart>


</androidx.constraintlayout.widget.ConstraintLayout>