<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/section_grey"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp">




        <TextView
            android:id="@+id/questionAuthorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="3dp"
            android:gravity="center"

            android:text="Poster ID"
            android:textStyle="bold"
            android:textColor="@color/button_dark_grey"
            android:fontFamily="monospace"
            android:background="@color/special_yellow"

            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2.5dp">
        </TextView>



        <TextView
            android:id="@+id/questionTitle"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="2.5dp"
            android:layout_marginHorizontal="10dp"


            android:layout_weight="5"
            android:background="@color/button_dark_grey"
            android:padding="3dp"
            android:text="Question title"
            android:textColor="@color/white"
            android:fontFamily="monospace">

        </TextView>



        <TextView
            android:id="@+id/questionBody"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="2.5dp"
            android:layout_marginHorizontal="10dp"

            android:layout_weight="5"
            android:background="@color/button_dark_grey"
            android:padding="3dp"
            android:text="Post body here"
            android:fontFamily="monospace"
            android:textColor="@color/white">
        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Click question to view replies"
            android:textAlignment="center"

            android:textColor="@color/button_dark_grey"
            android:background="@color/special_yellow"

            android:padding="3dp"

            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_horizontal">

        </TextView>

</LinearLayout>