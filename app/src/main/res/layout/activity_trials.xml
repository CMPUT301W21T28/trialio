<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">


    <!-- Page header -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_logo" />


        <ImageButton
            android:id="@+id/editUserBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter"  />

    </LinearLayout>


    <!-- Description of what this page does -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"

        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="monospace"

            android:gravity="center_horizontal"
            android:text="@string/trials_activity_heading"
            android:textColor="@color/special_yellow" />

    </LinearLayout>

    <!--  Current experiment goes here   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:background="@color/section_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trial_description"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2.5dp"

                android:layout_weight="5"
                android:background="#9c9c9c"
                android:backgroundTint="@color/special_yellow"
                android:fontFamily="monospace"

                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>


            <ImageView
                android:id="@+id/trials_location"

                android:layout_width="20dp"
                android:layout_height="20dp"


                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_location_off_24" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trials_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="2.4"
                android:background="@color/button_dark_grey"


                android:fontFamily="monospace"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp">

            </TextView>


            <TextView

                android:id="@+id/trials_text_owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"

                android:layout_marginBottom="2.5dp"
                android:layout_weight="5"
                android:background="@color/button_dark_grey"

                android:fontFamily="monospace"
                android:padding="3dp"
                android:text=""

                android:textColor="@color/white"
                android:textSize="12sp"></TextView>


            <TextView
                android:id="@+id/trials_text_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2.5dp"

                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="2"
                android:background="@color/button_dark_grey"

                android:fontFamily="monospace"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp"></TextView>


        </LinearLayout>

    </LinearLayout>

    <!-- UNPUBLISH AND SWITCH -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"

            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:text="@string/trials_list_heading"
            android:textColor="@color/special_yellow" />
    </LinearLayout>


    <!--  List of blocked users  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        android:gravity="center">


        <ListView
            android:id="@+id/trials_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:background="@color/section_grey" />

    </LinearLayout>

</LinearLayout>










