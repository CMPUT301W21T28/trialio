<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnAddTrials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#535353"
    tools:context=".activities.ExperimentActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_dialog_map"
            android:tint="#E8B41B">
            android:src="@android:drawable/ic_dialog_map"></ImageButton>


        <ImageButton
            android:id="@+id/btnLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_logo"></ImageButton>


        <ImageButton
            android:id="@+id/button_experiment_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_settings_24"
            android:tint="#E8B41B">
            android:src="@android:drawable/ic_menu_manage"
        </ImageButton>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="379dp"
        android:layout_height="185dp"
        android:layout_marginTop="20dp"
        android:background="#CCCECE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExperimentDesciption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:text="Description:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtExperimentOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Owner:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtExperimentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtExperimentRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtExperimentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtExperimentMinTrials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum number of trials:"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtSubValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:text="Subs:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatsSummary" />

    <ImageButton
        android:id="@+id/btnCamera"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#00FFFFFF"
        android:tint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/btnQA"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/btnStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:text="Stats"
        app:backgroundTint="#EEC021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTrials" />

    <Button
        android:id="@+id/btnTrials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:text="Trials"
        app:backgroundTint="#EEC021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <Button
        android:id="@+id/btnAddIgnored"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:gravity="bottom|clip_horizontal|center|clip_vertical|start|right|center_horizontal|fill|fill_horizontal|top|left|center_vertical|fill_vertical|end"
        android:text="+"
        android:textSize="24sp"
        app:backgroundTint="#E8B41B"
        app:layout_constraintStart_toEndOf="@+id/btnTrials"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <Button
        android:id="@+id/btnQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="QR Codes"
        app:backgroundTint="#EEC021"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQA" />

    <Button
        android:id="@+id/btnQA"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Q&amp;A"
        app:backgroundTint="#EEC021"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <Button
        android:id="@+id/btnSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Subscribe"
        app:backgroundTint="#EEC021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatsSummary" />

    <TextView
        android:id="@+id/txtStatsSummary"
        android:layout_width="292dp"
        android:layout_height="153dp"
        android:layout_marginTop="150dp"
        android:background="#A19B9B"
        android:text="Stats Summary:"
        android:textColor="#B6B0B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <Button
        android:id="@+id/locationPerm"
        android:layout_width="163dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="Allow Location"
        android:textColor="@color/purple_700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubscribe"
        app:layout_constraintVertical_bias="0.044" />

</androidx.constraintlayout.widget.ConstraintLayout>