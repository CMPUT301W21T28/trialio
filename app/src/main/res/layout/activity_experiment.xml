<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">


    <!-- Page header -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tint="#fbd700"
            android:src="@android:drawable/ic_dialog_map"
            android:backgroundTint="@color/section_grey"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_logo"
            android:backgroundTint="@color/section_grey"/>


        <ImageButton
            android:id="@+id/editUserBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_settings_24"
            android:tint="@color/special_yellow"
            android:backgroundTint="@color/section_grey"/>

    </LinearLayout>


    <!-- Description of what this page does -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"

        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiment Information"
            android:fontFamily="monospace"
            android:textColor="@color/special_yellow"

            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <!--  Current experiment goes here   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/section_grey"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/experiment_description"

                android:text="Description"
                android:textSize="12sp"
                android:backgroundTint="@color/special_yellow"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2.5dp"

                android:layout_marginBottom="2.5dp"
                android:layout_weight="5"
                android:background="#9c9c9c"
                android:padding="5dp"

                android:textColor="@color/black"
                android:fontFamily="monospace" >

            </TextView>



            <ImageView
                android:id="@+id/experiment_location"

                android:layout_width="20dp"
                android:layout_height="20dp"


                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_location_off_24" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/experiment_text_type"
                android:text="Type"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2.5dp"


                android:layout_weight="2.4"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">

            </TextView>


            <TextView

                android:id="@+id/experiment_text_owner"
                android:text="Owner"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2.5dp"


                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="3dp"

                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/experiment_text_status"
                android:text="Status"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2.5dp"

                android:layout_weight="2"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>

            <TextView
                android:id="@+id/experiment_region"

                android:text="Region"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2.5dp"

                android:layout_weight="1"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">

            </TextView>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView

                android:id="@+id/experiment_min_num"
                android:text="Min # Trials:"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2.5dp"

                android:layout_weight="7"
                android:background="@color/button_dark_grey"
                android:padding="3dp"

                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>


            <TextView

                android:id="@+id/txtSubValue"
                android:text="Subs: "
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2.5dp"

                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="3dp"

                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>



        </LinearLayout>

    </LinearLayout>

    <!-- UNPUBLISH AND SWITCH -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnTrials"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"

            android:backgroundTint="@color/special_yellow"
            android:text="Trials"
            android:textColor="@color/button_dark_grey"/>

        <ImageButton
            android:id="@+id/btnAddTrial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:src="@drawable/ic_baseline_add_box_24" />

        <Button
            android:id="@+id/btnQA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:textColor="@color/button_dark_grey"
            android:text="Q&amp;A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:text="Stats"
            android:textColor="@color/button_dark_grey"/>

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:text="Trials"
            android:src="@drawable/ic_baseline_photo_camera_24" />

        <Button
            android:id="@+id/btnQRCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:text="QR Codes"
            android:textColor="@color/button_dark_grey"/>

    </LinearLayout>


    <!--  List of blocked users  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        android:gravity="center">

        <TextView
            android:id="@+id/txtStatsSummary"

            android:text="Stats Summary\nFINISH ME"
            android:textSize="12sp"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="4"
            android:background="@color/button_dark_grey"
            android:padding="3dp"

            android:textColor="@color/white"
            android:fontFamily="monospace">
        </TextView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnSubscribe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:text="Subscribe"
            android:textColor="@color/button_dark_grey"/>


        <Button
            android:id="@+id/locationPerm"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"

            android:text="Allow Location"

            android:textColor="@color/button_dark_grey"/>
    </LinearLayout>


</LinearLayout>










