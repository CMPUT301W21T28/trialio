<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/section_grey"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/questionAuthorID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Poster ID"
            android:textColor="@color/black"
            android:background="@color/special_yellow"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2.5dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">


            <TextView
                android:id="@+id/questionTitle"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="15dp"
                android:text="Question title"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <!-- Review height value for content boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">


            <TextView
                android:id="@+id/questionBody"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="15dp"
                android:text="Post body here"
                android:textColor="@color/white">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">


        <Button
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Replies"
            android:textColor="@color/black"
            android:backgroundTint="@color/special_yellow"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">

        </Button>

    </LinearLayout>


</LinearLayout>