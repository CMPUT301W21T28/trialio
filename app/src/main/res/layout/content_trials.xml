<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/section_grey"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2.5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/text_trial_owner"
                android:text="Owner"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="@color/button_dark_grey"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="3dp"

                android:layout_weight="6"
                android:background="@color/special_yellow"
                android:padding="2dp">

            </TextView>

            <TextView


                android:id="@+id/text_trial_date"
                android:text="Date"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="@color/button_dark_grey"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"


                android:layout_weight="5"
                android:background="@color/special_yellow"
                android:padding="2dp" >

            </TextView>

    </LinearLayout>

    <!-- Review height value for content boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal">

            <TextView

                android:id="@+id/text_trial_result"
                android:text="Result"
                android:textSize="12sp"
                android:fontFamily="monospace"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="6dp"

                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="2dp"
                android:textColor="@color/white">
            </TextView>

        </LinearLayout>

    </LinearLayout>



