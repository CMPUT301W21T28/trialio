<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#747474"
    tools:context=".activities.QRMeasurementActivity">>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_logo" />


        <ImageButton
            android:id="@+id/editUserBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/section_grey"
            android:padding="10dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#9c9c9c"
        android:layout_margin="5dp"       >

        <Button
            android:id="@+id/btnshowQR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/special_yellow"
            android:text="QR Codes" />


        <Button
            android:id="@+id/btnshowBarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_dark_grey"
            android:text="Barcodes" />

    </LinearLayout>

    // "parent experiment"
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"

        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"

            android:fontFamily="monospace"
            android:gravity="center_horizontal"

            android:text="Parent Experiment:"
            android:textColor="@color/special_yellow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/section_grey"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qr_description"
                android:text="Description"
                android:textSize="12sp"
                android:backgroundTint="@color/special_yellow"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2.5dp"

                android:layout_marginBottom="2.5dp"
                android:layout_weight="5"
                android:background="#9c9c9c"
                android:padding="5dp"

                android:textColor="@color/black"
                android:fontFamily="monospace"
                >

            </TextView>



            <ImageView
                android:id="@+id/qr_location"

                android:layout_width="20dp"
                android:layout_height="20dp"


                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_location_off_24" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qr_text_type"
                android:text="Type"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"


                android:layout_weight="2.4"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">

            </TextView>


            <TextView

                android:id="@+id/qr_text_owner"
                android:text="Owner"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"

                android:layout_weight="5"
                android:background="@color/button_dark_grey"
                android:padding="3dp"

                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>



            <TextView
                android:id="@+id/qr_text_status"
                android:text="Status"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="2.5dp"

                android:layout_weight="2"
                android:background="@color/button_dark_grey"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="monospace">
            </TextView>


        </LinearLayout>

    </LinearLayout>

    //barcode

    <LinearLayout
        android:id="@+id/barcodeFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/experimentInfoIL">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"

                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:text="Barcode"
                android:textColor="@color/special_yellow" />

            <ListView
                android:id="@+id/listBarcode"
                android:layout_width="wrap_content"
                android:layout_height="460dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtMeasurementQRValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Enter value here"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnQRMeasurement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:backgroundTint="@color/special_yellow"
                    android:text="Create QR Code"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>